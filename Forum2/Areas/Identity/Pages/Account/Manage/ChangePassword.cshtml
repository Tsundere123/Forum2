@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="h3 fw-normal">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <partial name="_ValidationSummary" model="ViewData.ModelState"/>
            <div class="form-floating mb-2">
                <input asp-for="Input.OldPassword" class="form-control" id="first-form-control" placeholder="Old Password" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword"></label>
                <span asp-validation-for="Input.OldPassword" class="invalid-feedback"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.NewPassword" class="form-control middle-form-control" placeholder="New Password" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword"></label>
                <span asp-validation-for="Input.NewPassword" class="invalid-feedback"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.ConfirmPassword" class="form-control" id="last-form-control" placeholder="Confirm New Password" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="invalid-feedback"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
