@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<style>
    .form-floating:focus-within {
      z-index: 2;
    }
    
    #first-form-control {
        border-bottom-right-radius: 0; 
        border-bottom-left-radius: 0;
    }
    
    .middle-form-control {
        margin-top: -1px;
        border-radius: 0; 
    }        
    
    #last-form-control {
        margin-top: -1px;
        border-top-left-radius: 0; 
        border-top-right-radius: 0;
    }
</style>

<h3 class="h3 fw-normal">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.OldPassword" class="form-control" id="first-form-control" placeholder="Old Password" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword"></label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.NewPassword" class="form-control middle-form-control" placeholder="New Password" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" id="last-form-control" placeholder="Confirm New Password" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary mt-2">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
