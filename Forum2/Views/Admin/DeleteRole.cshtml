@model ApplicationRole
@{
    ViewData["Title"] = "Delete Role";
    Layout = "_AdminLayout";
}

<form asp-controller="Admin" asp-action="DeleteRole">
    <div>
        <p>Are you sure you want to delete @Model.Name?</p>
    </div>
    <div class="mt-2">
        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
        <a asp-controller="Admin" asp-action="Roles" class="btn btn-sm btn-secondary">Back</a>
    </div>
</form>