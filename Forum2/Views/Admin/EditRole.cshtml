@model ApplicationRole

@{
    ViewData["Title"] = "Edit role";
}

<h1>Admin Panel</h1>

<div>
    <h2>Roles</h2>
    <hr />
    <div class="row">
        <div class="col-md-3 mb-2 mb-md-0">
            <partial name="_AdminNavListPartial" />
        </div>
        <div class="col-md-9">
            <h3>Edit role</h3>
            <form asp-controller="Admin" asp-action="EditRole">
                <div class="form-group mb-2">
                    <label asp-for="Name">Role name</label><span class="text-danger">*</span>
                    <input asp-for="Name" class="form-control" required="required" disabled="@Model.IsFixed.ToString()">
                    <span asp-validation-for="Name" class="invalid-feedback"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Color"></label>
                    <input type="color" asp-for="Color" class="form-control form-control-color">
                    <span asp-validation-for="Color" class="invalid-feedback"></span>
                </div>
                <div>
                    <button type="submit" class="btn btn-success">Edit</button>
                    <a asp-controller="Admin" asp-action="Roles" class="btn btn-danger">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>