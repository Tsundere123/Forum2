@model ApplicationRole
@{
    ViewData["Title"] = "Edit Role";
    Layout = "_AdminLayout";
}

<form asp-controller="Admin" asp-action="EditRole">
    <div class="form-group mb-2">
        <label asp-for="Name">Role name</label><span class="text-danger">*</span>
        <input asp-for="Name" class="form-control" required="required" disabled="@Model.IsFixed">
        <span asp-validation-for="Name" class="text-danger" style="font-size: .875em;"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Color"></label>
        <input type="color" asp-for="Color" class="form-control form-control-color">
        <span asp-validation-for="Color" class="text-danger" style="font-size: .875em;"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-sm btn-success">Edit</button>
        <a asp-controller="Admin" asp-action="Roles" class="btn btn-sm btn-danger">Back</a>
    </div>
</form>