@model IEnumerable<ForumCategory>
@{
    ViewData["Title"] = "Categories";
    Layout = "_AdminLayout";
}


<div class="d-flex justify-content-end mb-2">
    <a class="btn btn-sm btn-success" asp-controller="Admin" asp-action="NewCategory">
        New Category
    </a>
</div>

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Id.ToString()</td>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>
                <a asp-controller="Admin" asp-action="EditCategory" asp-route-id="@category.Id.ToString()">Edit</a>
                <a asp-controller="Admin" asp-action="DeleteCategory" asp-route-id="@category.Id.ToString()">Delete</a>
            </td>
        </tr>
    }
</table>