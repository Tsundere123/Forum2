@{
    ViewData["Title"] = "Delete Category";
}

@model ForumCategory

<h1>Admin Panel</h1>

<div>
    <h2>Categories</h2>
    <hr />
    <div class="row">
        <div class="col-md-3 mb-2 mb-md-0">
            <partial name="_AdminNavListPartial" />
        </div>
        <div class="col-md-9">
            <h3>Delete Category</h3>
            <form asp-controller="Admin" asp-action="DeleteCategory">
                <div>
                    <p>Are you sure you want to delete @Model.ForumCategoryName?</p>
                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-controller="Admin" asp-action="Categories" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>