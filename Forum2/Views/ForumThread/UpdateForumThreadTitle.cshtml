@model ForumThread
@{
    ViewData["Title"] = "Update Thread";
}

<h1 class="h2 fw-normal">Edit Thread</h1>

<form asp-controller="ForumThread" asp-action="UpdateForumThreadTitle">
    <input type="hidden" asp-for="Id">
    <input type="hidden" asp-for="CreatorId">
    <input type="hidden" asp-for="CreatedAt">
    <input type="hidden" asp-for="CategoryId">
    <div class="form-group mb-2">
        <label asp-for="Title" class="fw-bold"></label>
        <input asp-for="Title" class="form-control">
        <span asp-validation-for="Title" class="invalid-feedback"></span>
    </div>
    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-sm btn-success">Save Changes</button>
        <a asp-controller="ForumPost" asp-action="ForumPostView" asp-route-forumThreadId="@Model.Id.ToString()" class="btn btn-sm btn-dark">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
