@model Account

<h2>Update account @Model.AccountName</h2>

<form asp-controller="Account" asp-action="UpdateSelectedAccount">
    <input type="hidden" asp-for="AccountId">
    <div class="form-group">
        <label asp-for="AccountName"></label><span class="text-danger">*</span>
        <input asp-for="AccountName" class="form-control">
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AccountPassword"></label><span class="text-danger">*</span>
        <input asp-for="AccountPassword" class="form-control">
        <span asp-validation-for="AccountPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AccountAvatar"></label>
        <input asp-for="AccountAvatar" class="form-control">
        <span asp-validation-for="AccountAvatar" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-secondary">Save Changes</button>
    <a asp-controller="Account" asp-action="Table" class="btn btn-secondary">Back to table view</a>
</form>