@using Forum2.DAL
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@model ForumPost

@inject UserManager<ApplicationUser> UserManager

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<div class="container">
    <div class="row">
        <div class="col-2">
            <div class="col-sm">@UserManager.FindByIdAsync(@Model.ForumPostCreatorId).Result.DisplayName</div>
            <div class="col-sm"><img src="@UserManager.FindByIdAsync(@Model.ForumPostCreatorId).Result.AvatarUrl" width="100px" height="100px"></div>
        </div>
        <div id="postContent_@Model.ForumPostId" class="col-10">@Model.ForumPostContent</div>
        <div>
            @if (SignInManager.IsSignedIn(User))
            {
                @if (User.IsInRole("Administrator") || User.IsInRole("Moderator") || UserManager.GetUserAsync(User).Result.Id == Model.ForumPostCreatorId)
                {
                    <a asp-controller="ForumPost" asp-action="UpdateForumPostContent" asp-route-forumPostId="@Model.ForumPostId">EDIT</a>
                    <a asp-controller="ForumPost" asp-action="DeleteSelectedForumPost" asp-route-forumPostId="@Model.ForumPostId">DELETE</a>
                }
            }
        </div>
        <div>
            <button id="quoteThisPost_@Model.ForumPostId">Quote</button>
        </div>
        
        <script>
        function quotePost() 
        {
            console.log("quotePost");
            var postContent = $("#postContent_@Model.ForumPostId").html();
            console.log(postContent);
            $("#inputNewPostContent").val(postContent);
        }
        
        $("#quoteThisPost_@Model.ForumPostId").click(quotePost);
        </script>
        
        <div>
            @if (Model.ForumPostLastEditedTime > Model.ForumPostCreationTimeUnix)
            {
                <div>
                    <p>Last edited by: @UserManager.FindByIdAsync(Model.ForumPostLastEditedBy).Result.DisplayName</p>
                    <p>At: @Model.ForumPostLastEditedTime</p>
                </div>
            }
        </div>
    </div>
</div>

