<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Forum2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/tiny-slider/tiny-slider.css"/>
    <link rel="stylesheet" href="~/lib/easymde/easymde.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Forum2.styles.css" asp-append-version="true"/>
    
    <!-- Load jQuery early -->
    <script src="~/lib/jquery/jquery.min.js"></script>
</head>
<body>
<header>
    <partial name="_Navbar" />
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - Forum2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>